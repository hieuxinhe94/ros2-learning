<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:arg name="use_mock_hardware" default="true" />
  <xacro:arg name="use_gazebo" default="true" />

  <ros2_control name="FirstRobot" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>

    <!-- Joint Definitions -->
    <xacro:macro name="define_joint_interfaces" params="joint_name">
      <joint name="${joint_name}">
        <command_interface name="position"/>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
      </joint>
    </xacro:macro>

    <!-- Front Left Leg -->
    <xacro:define_joint_interfaces joint_name="left_front_hip_joint"/>
    <xacro:define_joint_interfaces joint_name="left_front_upper_leg_joint"/>
    <xacro:define_joint_interfaces joint_name="left_front_lower_leg_joint"/>

    <!-- Front Right Leg -->
    <xacro:define_joint_interfaces joint_name="right_front_hip_joint"/>
    <xacro:define_joint_interfaces joint_name="right_front_upper_leg_joint"/>
    <xacro:define_joint_interfaces joint_name="right_front_lower_leg_joint"/>

    <!-- Rear Left Leg -->
    <xacro:define_joint_interfaces joint_name="left_rear_hip_joint"/>
    <xacro:define_joint_interfaces joint_name="left_rear_upper_leg_joint"/>
    <xacro:define_joint_interfaces joint_name="left_rear_lower_leg_joint"/>

    <!-- Rear Right Leg -->
    <xacro:define_joint_interfaces joint_name="right_rear_hip_joint"/>
    <xacro:define_joint_interfaces joint_name="right_rear_upper_leg_joint"/>
    <xacro:define_joint_interfaces joint_name="right_rear_lower_leg_joint"/>

  </ros2_control>

  <gazebo>
    <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
      <parameters>$(find first_robot)/config/ros_control.yaml</parameters>
    </plugin>
  </gazebo>
</robot>